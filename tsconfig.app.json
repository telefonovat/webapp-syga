{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noUnusedLocals": false,
    // Does this even do anything?
    // "importModuleSpecifierPreference": "project-relative",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"], 
      "@test/*" : ["./test/*"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    "types":["vitest/globals"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/stores/visualizerStore.ts",
  "test/**/*.ts", "src/components/utility/SimpleMessagePopup.vue", "src/components/util/SimpleMessagePopup.vue", "src/components/visualizer/VisualizerNavigation.vue"]
}
